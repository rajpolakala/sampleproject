pipeline {
  agent any

  stages {
    stage('Check MSBuild') {
      steps {
        script {
          if (isUnix()) {
            def msbuildPath = sh(returnStdout: true, script: 'which msbuild').trim()
            if (msbuildPath) {
              echo "MSBuild found at: ${msbuildPath}"
            } else {
              echo "MSBuild not found. Please ensure it is installed and accessible in the PATH."
            }
          } else {
            def msbuildPath = bat(returnStdout: true, script: 'where msbuild').trim()
            if (msbuildPath) {
              echo "MSBuild found at: ${msbuildPath}"
            } else {
              echo "MSBuild not found. Please ensure it is installed and accessible in the PATH."
            }
          }
        }
      }
    }
  }
}
